<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.QuanLyChucVuController">

    <top>
        <Label text="QUẢN LÝ CHỨC VỤ"
               style="-fx-font-size:18px;-fx-font-weight:bold;"
               BorderPane.alignment="CENTER">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <font><Font size="30"/></font>
        </Label>
    </top>

    <center>
        <VBox spacing="8">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <HBox alignment="CENTER" spacing="6">
                <Label text="Tìm kiếm:"/>
                <TextField fx:id="txtSearch" promptText="Nhập mã hoặc tên…" prefWidth="480"/>
            </HBox>

            <TableView fx:id="tableChucVu" prefHeight="320">
                <columns>
                    <TableColumn fx:id="colSTT"   text="STT"         prefWidth="50"/>
                    <TableColumn fx:id="colMaCV"  text="Mã chức vụ"  prefWidth="120"/>
                    <TableColumn fx:id="colTenCV" text="Tên chức vụ" prefWidth="280"/>
                </columns>
            </TableView>

            <Label text="* Chuột phải ► ô: Sửa | hàng: Xoá" style="-fx-font-size:11;"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <Label text="Mã:"/><TextField fx:id="txtMaCV" prefWidth="100"/>
            <Label text="Tên:"/><TextField fx:id="txtTenCV" prefWidth="180"/>

            <Button fx:id="btnThem" text="Thêm" minWidth="80" onAction="#handleThemChucVu"/>
        </HBox>
    </bottom>
</BorderPane>
