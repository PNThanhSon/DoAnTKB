<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuanLyChucVuController">
    <top>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="QUẢN LÝ CHỨC VỤ" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <font>
            <Font name="Times New Roman" size="12.0" />
         </font>
        </Label>
    </top>
    <center>
        <TableView fx:id="tableChucVu" prefHeight="300" prefWidth="500">
            <columns>
                <TableColumn fx:id="colSTT" prefWidth="50" text="STT" />
                <TableColumn fx:id="colMaCV" prefWidth="134.4000244140625" text="Mã chức vụ" />
                <TableColumn fx:id="colTenCV" prefWidth="232.0000061035156" text="Tên chức vụ" />
            </columns>
        </TableView>
    </center>
    <!-- … (phần trên giữ nguyên) … -->
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>

            <!-- Nhập mới / cập nhật -->
            <Label text="Mã chức vụ:" />
            <TextField fx:id="txtMaCV" prefWidth="100" promptText="Nhập mã" />
            <Label text="Tên chức vụ:" />
            <TextField fx:id="txtTenCV" prefWidth="180" promptText="Nhập tên" />

            <!-- 3 nút thao tác -->
            <Button minWidth="80" onAction="#handleThemChucVu" text="Thêm" />
            <Button minWidth="80" onAction="#handleSuaChucVu" text="Cập nhật" />
            <Button minWidth="80" onAction="#handleXoaChucVu" text="Xóa" />
        </HBox>
    </bottom>
</BorderPane>
