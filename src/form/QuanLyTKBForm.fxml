<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.QuanLyTKBController">

    <!-- ───────── TIÊU ĐỀ ───────── -->
    <top>
        <Label text="QUẢN LÝ THỜI KHÓA BIỂU"
               BorderPane.alignment="CENTER"
               style="-fx-font-size:18px;-fx-font-weight:bold;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
        </Label>
    </top>

    <!-- ─────── Thanh công cụ ────── -->
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <!-- Hàng nhập / chọn mã TKB -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Mã TKB:"/>

                <!--  ComboBox mã TKB, cho phép gõ để lọc -->
                <ComboBox fx:id="cboMaTKB" prefWidth="120"
                          editable="true" promptText="Chọn / gõ mã"/>

                <!-- Ẩn TextField cũ:  txtMaTKB  (hoặc xoá hẳn) -->
                <!--<TextField fx:id="txtMaTKB" prefWidth="120"/>-->

                <Label text="Khối:"/>
                <ComboBox fx:id="cboKhoi" prefWidth="80"/>
                <Button text="Xem"   onAction="#handleLoad"/>

                <Button text="Thêm"  onAction="#handleAddTKB"/>
                <Button text="Xoá"   onAction="#handleDeleteTKB"/>
                <Button text="Lưu"   onAction="#handleUpdateTKB"/>
            </HBox>


            <!-- Hàng 2: bảng dữ liệu -->
            <TableView fx:id="table" editable="true" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
